# vim: setl ft=sxhkdrc
super + {KP_Enter,KP_End}
    {alacritty,xterm}

super + shift + Return
    kitty

super + Escape
	pkill -USR1 -x sxhkd && notify-send -t 1000 "DWM" "SXHKD Restarted"
    # && pkill -RTMIN+1 bliss && notify-send -t 1000 "DWM" "Bliss Restarted"

# Launch Filemanager
super +{_,shift + } e
    {thunar || pcmanfm || notify-send -t 1500 -u critical "Failed to open File manager" "Thunar or Pcmanfm is not installed " ,alacritty -e vifmrun}

super +{_,shift +} w
    {  $BROWSER || firefox, ([[ "$BROWSER" != "firefox" ]] && firefox) ||  brave-browser || brave || chromium ||flatpak run com.github.Eloston.UngoogledChromium}

super + @g
    qalculate-gtk || gnome-calculator || galculator || notify-send "Error" "Calculator App not installed" -u critical
super + {shift+d,r,v,y,p}
    {rofi -show run -async-pre-read,rofi -show drun -async-pre-read,virt-manager || virtualbox || VirtualBox,clipboard,superp}

super + alt + {c,g}
    {open-rcs,open-games}

control + alt + {p,c,v,e}
    {get-class-name,xcolor -s,pavucontrol || pavucontrol-qt,rofie}

super + control + {s,l}
    {logout_prompt,betterlockscreen -l}

{_,shift +, alt + }@Print
    take_ss {clip,focus,full} && notify-send "Maim" "Screenshot Taken" || notify-send "Failed" "Maim is not installed." -u critical

#Raises volume
XF86Audio{Raise,Lower}Volume
    audio {inc,dec}
shift + XF86Audio{Raise,Lower}Volume
    wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 10%{+,-}
#Mute
{_,shift + }XF86AudioMute
    {audio toggle,wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && pgrep goblocks && kill -40 "$(pidof goblocks)"}

XF86{Search,Calculator}
    {rofi -show drun -async-read 10,qalculate-gtk || gnome-calculator || galculator}

#Brightness up
XF86Audio{Next,Prev}
    brightnessctl s 10{+,-} && notify-send "Brightness: " -t 2000 -i display-brightness -h int:value:$(light) && kill -53 $(pidof dwmblocks)
XF86MonBrightness{Up,Down}
    brightnessctl s 10{+,-} && notify-send "Brightness: " -t 2000 -i display-brightness -h int:value:$(light) && kill -53 $(pidof dwmblocks)

shift + XF86MonBrightness{Up,Down}
    brightnessctl s {200,10} && notify-send "Brightness: " -t 2000 -i display-brightness -h int:value:$(light) && kill -53 $(pidof dwmblocks)
