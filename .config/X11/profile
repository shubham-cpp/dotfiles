PATH="$PATH:$HOME/.config/suckless/dwm/status/scripts/"
# Deduplicate entries in PATH
PATH="$(echo $PATH | tr ':' '\n' | awk '{print length, $0}' | sort -n | cut -d' ' -f2 | uniq | tr '\n' ':' | rev | cut -c2- | rev)"

export PATH

