#!/usr/bin/env bash

# For removing duplicates from path
# echo $PATH | tr ' ' '\n' | awk '{print length, $0}' | sort -n | cut -d' ' -f2 | uniq | tr '\n' ':'

PATH="$PATH:$HOME/.local/bin/:$HOME/.local/bin/myscripts/"
